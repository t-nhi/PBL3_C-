    huyHD.addEventListener("click", () => {
        box.style.display = "block";
        box.style.position = "fixed"; // Đặt vị trí là fixed
        box.style.top = "50%";
        box.style.left = "50%";
        box.style.transform = "translate(-50%, -50%)"; // Đảm bảo hộp hiển thị ở giữa màn hình
        body.style.backgroundColor = "#222";
        document.querySelector(".DanhsachHD").style.filter = "blur(50px)"; // hiệu ứng làm mờ layout bên dưới
    });
    btn_xacnhan.addEventListener("click", () => {

        box.style.display = "none";

    });

    close.addEventListener("click", () => {
        huyHD.style.display = "block";
        box.style.display = "none";
        body.style.backgroundColor = "#999";
    });
</script>